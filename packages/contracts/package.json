{
  "name": "credchain-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for CredChain - Decentralized Credit Scoring System",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:ethereum:mainnet": "hardhat run scripts/deploy-ethereum.js --network mainnet",
    "deploy:ethereum:sepolia": "hardhat run scripts/deploy-ethereum.js --network sepolia",
    "deploy:ethereum:goerli": "hardhat run scripts/deploy-ethereum.js --network goerli",
    "deploy:polkadot:mainnet": "hardhat run scripts/deploy.js --network polkadot",
    "deploy:polkadot:testnet": "hardhat run scripts/deploy.js --network paseo",
    "deploy:polkadot:assetHub": "hardhat run scripts/deploy.js --network assetHub",
    "verify:ethereum:mainnet": "hardhat run scripts/verify-contracts-ethereum.js --network mainnet",
    "verify:ethereum:sepolia": "hardhat run scripts/verify-contracts-ethereum.js --network sepolia",
    "verify:polkadot:mainnet": "hardhat run scripts/verify-contracts.js --network polkadot",
    "verify:polkadot:testnet": "hardhat run scripts/verify-contracts.js --network paseo",
    "verify:polkadot:assetHub": "hardhat run scripts/verify-contracts.js --network assetHub",
    "size": "hardhat size-contracts",
    "gas": "REPORT_GAS=true hardhat test",
    "coverage": "hardhat coverage",
    "clean": "hardhat clean",
    "check:ethereum:mainnet": "node scripts/verify-ethereum-readiness.js",
    "check:polkadot:mainnet": "node scripts/verify-mainnet-readiness.js",
    "check:mainnet:readiness": "hardhat run scripts/check-mainnet-readiness.js --network mainnet",
    "deploy:mainnet": "hardhat run scripts/deploy-mainnet.js --network mainnet",
    "verify:mainnet": "hardhat run scripts/verify-mainnet.js --network mainnet",
    "configure:mainnet": "hardhat run scripts/configure-mainnet.js --network mainnet",
    "test:mainnet": "hardhat run scripts/test-mainnet.js --network mainnet",
    "security:audit": "hardhat run scripts/security-audit.js",
    "fix:security": "node scripts/fix-security-issues.js",
    "audit:full": "npm run security:audit && npm run check:mainnet:readiness",
    "deploy:production": "npm run audit:full && npm run deploy:mainnet && npm run configure:mainnet && npm run test:mainnet"
  },
  "keywords": [
    "blockchain",
    "polkadot",
    "credit-scoring",
    "smart-contracts",
    "solidity",
    "defi"
  ],
  "author": "CredChain Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^4.9.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5"
  },
  "dependencies": {
    "@polkadot/api": "^10.0.0",
    "@polkadot/types": "^10.0.0",
    "ethers": "^6.8.0"
  }
}
