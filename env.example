# CredChain Environment Variables
# Copie este arquivo para .env e configure suas variáveis

# Configurações Gerais
NODE_ENV=development
PORT=3000
API_PORT=3001
ELIZA_PORT=3002

# Banco de Dados
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=credchain
POSTGRES_USER=credchain
POSTGRES_PASSWORD=credchain123

MONGODB_URI=mongodb://localhost:27017/credchain
MONGODB_DB=credchain

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT e Autenticação
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Polkadot e Blockchain
POLKADOT_RPC_URL=https://rpc.polkadot.io
POLKADOT_WS_URL=wss://rpc.polkadot.io
CHAIN_ID=0
NETWORK_NAME=polkadot

# Contratos (serão preenchidos após deploy)
CREDIT_SCORE_CONTRACT_ADDRESS=
PAYMENT_REGISTRY_CONTRACT_ADDRESS=
IDENTITY_VERIFICATION_CONTRACT_ADDRESS=
ORACLE_INTEGRATION_CONTRACT_ADDRESS=

# ElizaOS
ELIZA_API_KEY=your_eliza_api_key_here
ELIZA_MODEL=gpt-4
ELIZA_TEMPERATURE=0.7

# APIs Externas
SERASA_API_KEY=your_serasa_api_key_here
SPC_API_KEY=your_spc_api_key_here
RECEITA_FEDERAL_API_KEY=your_receita_federal_api_key_here

# Payment Gateways
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# PIX
PIX_KEY=your_pix_key_here
PIX_SECRET=your_pix_secret_here

# Open Banking
OPEN_BANKING_CLIENT_ID=your_open_banking_client_id_here
OPEN_BANKING_CLIENT_SECRET=your_open_banking_client_secret_here

# Notificações
SENDGRID_API_KEY=your_sendgrid_api_key_here
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# Monitoramento
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
ELASTICSEARCH_URL=http://localhost:9200
KIBANA_URL=http://localhost:5601

# Logs
LOG_LEVEL=info
LOG_FILE=logs/credchain.log

# Segurança
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Desenvolvimento
DEBUG=true
HOT_RELOAD=true
WATCH_MODE=true